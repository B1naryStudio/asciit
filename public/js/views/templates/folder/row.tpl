<div class="list-group-item">
    <div class="row">
        <form class="form-horisontal folders-form-list">
            <div class="form-group">
                <input type="text" class="form-control" name="title" value="<%- title %>" disabled>
                <span class="help-block hidden"></span>
            </div>
            <span class="control-buttons">
                <button class="glyphicon glyphicon-ok update-folder" title="Update"></button>
                <span class="glyphicon glyphicon-ban-circle cancel-update" title="Cancel"></span>
            </span>
            <span class="edit-buttons">
                <span class="glyphicon glyphicon-pencil edit-folder" title="Edit"></span>
                <span class="glyphicon glyphicon-remove delete-folder" title="Delete"></span>
            </span>
        </form>
    </div>
</div>