<div class="list-group-item">
    <div class="row">
        <div class="col-md-10">
            <div class="row">
                <form class="form-horisontal folders-form">
                    <div class="title-wrapper">
                        <input type="text" class="form-control" name="name" value="<%- title %>" disabled>
                        <span class="help-block hidden"></span>
                    </div>
                    <div class="control-buttons">
                        <button type="button" class="update-folder">OK</button>
                        <button type="button" class="cancel-update">Cancel</button>
                    </div>
                    <button type="button" class="delete-folder">Delete</button>
                    <button type="button" class="edit-folder">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>