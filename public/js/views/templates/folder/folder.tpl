<div class="list-group-item">
    <div class="row">
        <form class="form-horisontal folders-form-list col-sm-10 col-xs-9">
            <div class="form-group">
                <input type="text" class="form-control" name="name" value="<%- title %>" disabled>
                <span class="help-block hidden"></span>
            </div>
        </form>
        <div class="control-buttons col-sm-2 col-xs-3">
            <span class="glyphicon glyphicon-ok update-folder" title="Update"></span>
            <span class="glyphicon glyphicon-ban-circle cancel-update" title="Cancel"></span>
        </div>
        <div class="edit-buttons col-sm-2 col-xs-3">
            <span class="glyphicon glyphicon-pencil edit-folder" title="Edit"></span>
            <span class="glyphicon glyphicon-remove delete-folder" title="Delete"></span>
        </div>
    </div>
</div>